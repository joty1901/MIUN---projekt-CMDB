@model MoviesViewModel
@section scripts {
    <script src="~/js/searchHandler.js"></script>
}
<header id="gtco-header" class="gtco-cover" role="banner" style="background-image:url(images/img_movie_poster.jpg);">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>CMDb</h1>
                        <h2>Cineast Movie Database</h2>
                        <p>
                            <a href="#" class="btn btn-primary btn-lg">Get Started</a>
                            <a href="#" class="btn btn-white btn-outline btn-lg">Download</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="gtco-features">
    <div class="gtco-container">
        <h1 style="text-align: center;">Top Rated Movie</h1>
        <div class="row">
            <div class="col-md-4 col-sm-4" style="width:100%;">
                <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <img src="@Model.movies[0].Poster" />
                        <h3>@Html.DisplayFor(item => Model.movies[0].Title)</h3>
                        <p>@Html.DisplayFor(item => Model.movies[0].numberOfLikes) Likes</p>
                        <p>@Html.DisplayFor(item => Model.movies[0].numberOfDislikes) Dislikes</p>
                        <p>@Html.DisplayFor(item => Model.movies[0].Plot)</p>

                        <a asp-action="Index" asp-controller="Details" asp-route-id="@Model.movies[0].ImdbID">
                            <button class="btn btn-primary btn-outline" type="submit">
                                   More
                            </button>
                        </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>

<div id="gtco-features-2">
    <div class="gtco-container">
        <h1 style="text-align: center;">Other Top Rated Movies</h1>

        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2></h2>

            </div>
        </div>

        <div class="row">
            @for (int i = 1; i < Model.movies.Count; i++)
             {
                <div class="col-md-4">
                    <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <img style="max-width: 300px; max-height: 450px;" src="@Model.movies[i].Poster" onerror="this.src = '/images/missingimage.jpg'"/>
                        <h3>@Html.DisplayFor(item => Model.movies[i].Title)</h3>
                        <p>@Html.DisplayFor(item => Model.movies[i].numberOfLikes) Likes</p>
                        <p>@Html.DisplayFor(item => Model.movies[i].numberOfDislikes) Dislikes</p>
                        <p>@Html.DisplayFor(item => Model.movies[i].Plot)</p>
                    
                        <a asp-action="Index" asp-controller="Details" asp-route-id="@Model.movies[i].ImdbID">
                            <button class="btn btn-primary btn-outline" type="button" >
                                    More
                            </button>
                        </a>
                    </div>
                </div>
             }
        </div>
    </div>
</div>

<div id="gtco-subscribe">
    <div class="gtco-container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2>Här ska en extra sökruta finnas</h2>
                <p>Sök efter en film</p>
            </div>
        </div>
        <div class="row animate-box">
            <div class="col-md-12">
               
                    <div class="col-md-4 col-sm-4" style="width:66.6666%;">
                        <div class="form-group">
                            <label id="nameHolder" for="name" class="sr-only">Name</label>
                            <input type="text" class="form-control" id="search" placeholder="Movie title...">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <button id="searchBtn" type="submit" class="btn btn-default btn-block">Search</button>
                    </div>
               
            </div>
        </div>
    </div>
</div>