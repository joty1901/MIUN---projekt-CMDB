@model MoviesViewModel

<header id="gtco-header" class="gtco-cover" role="banner" style="background-image:url(images/img_movie_poster.jpg);">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>CMDb</h1>
                        <h2>Cineast Movie Database</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="gtco-features">
    <div class="gtco-container">
        <h1 style="text-align: center;">Top Rated Movie</h1>
        <h2 style="text-align: center;">Number 1</h2>
        <div class="row">
            <div class="col-md-4 col-sm-4" style="width:100%;">
                <div class="feature-center animate-box" data-animate-effect="fadeIn">
                    <img src="@Model.topMovies[0].Poster" onerror="this.src='images/missingimage.jpg' "/>
                    <h3>@Html.DisplayFor(item => Model.topMovies[0].Title)</h3>

                    <ul id="detailsList">
                        <li><button id="thumbs-up" accesskey="@Model.topMovies[0].ImdbID"><a class="icon-thumbs-up">@Model.topMovies[0].numberOfLikes</a></button></li>
                        <li><button id="thumbs-down" accesskey="@Model.topMovies[0].ImdbID"><a class="icon-thumbs-down">@Model.topMovies[0].numberOfDislikes</a></button></li>
                    </ul>

                    <p>@Html.DisplayFor(item => Model.topMovies[0].ShortPlot)</p>

                    <a asp-action="Index" asp-controller="Details" asp-route-id="@Model.topMovies[0].ImdbID">
                        <button class="btn btn-primary btn-outline" type="submit">
                            More
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="gtco-features-2">
    <div class="gtco-container">
        <h1 style="text-align: center;">Top 2-4 Rated Movies</h1>

        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
            </div>
        </div>

        <div class="row">
            @for (int i = 1; i < Model.topMovies.Count; i++)
            {
                <div class="col-md-4">
                    <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <img style="max-width: 300px; max-height: 450px;" src="@Model.topMovies[i].Poster" onerror="this.src = '/images/missingimage.jpg'"/>
                        <h3>@Html.DisplayFor(item => Model.topMovies[i].Title)</h3>

                        <ul id="detailsList">
                            <li><button id="thumbs-up" accesskey="@Model.topMovies[i].ImdbID"><a class="icon-thumbs-up">@Model.topMovies[i].numberOfLikes</a></button></li>
                            <li><button id="thumbs-down" accesskey="@Model.topMovies[i].ImdbID"><a class="icon-thumbs-down">@Model.topMovies[i].numberOfDislikes</a></button></li>
                        </ul>

                        <p>@Html.DisplayFor(item => Model.topMovies[i].ShortPlot)</p>

                        <a asp-action="Index" asp-controller="Details" asp-route-id="@Model.topMovies[i].ImdbID">
                            <button class="btn btn-primary btn-outline" type="button">
                                More
                            </button>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="gtco-section">
    <div class="gtco-container" id="searchResultContaint">
        <h1 style="text-align: center;">More High Rated Movies</h1>

        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
            </div>
        </div>
        @for (int i = 4; i < 14; i++)
        {
            <div class="col-md-4 animate-box" id="searchResultBoxes">
                <img src="@Model.movies[i].Poster" onerror="this.src='/images/missingimage.jpg'" />
                <blockquote><b>@Model.movies[i].Title (@Model.movies[i].Year)</b></blockquote>
                <a asp-action="Index" asp-controller="Details" asp-route-id="@Model.movies[i].ImdbID">
                    <button class="btn btn-primary btn-outline" type="submit">
                        More
                    </button>
                </a>
            </div>
        }
    </div>
</div>

<script src="~/js/likesHandler.js"></script>