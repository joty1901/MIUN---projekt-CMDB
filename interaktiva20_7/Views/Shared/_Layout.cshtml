    <link rel="stylesheet" href="css/owl.theme.default.min.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="css/style.css">

    <!--Custom style for project-->
    <link rel="stylesheet" href="css/cmdbstyle.css">

    <!-- Modernizr JS -->
    <script src="js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->


</head>
<body>

    <div class="gtco-loader"></div>

    <div id="page">
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">
                <div class="row">
                    <div class="col-xs-2">
                        <div id="gtco-logo"><a>@Html.ActionLink("CMDB", "Index", "start")</a></div>
                    </div>
                    <div class="col-xs-10 text-right menu-1">
                        <ul id="menuList">
                            <li><a href="/home">Hem</a></li>
                            <li>
                                <div id="menuSearchDiv">
                                    <input type="text" class="form-control fadeInLeft" id="menuSearchBar" placeholder="Movie title..." />
                                    <div id="menuSearchResult">
                                        <ul id="myList" style="display: none;">
                                            @foreach (var movie in Model.savedList)
                                            {

                                                <li class="listItemsInSearch">
                                                    <button id="listButton" onclick="clickMovie(value)" value="@movie.ImdbID">
                                                        <img src="@movie.Poster" onerror="this.src='images/missingimage.jpg'" />
                                                        <blockquote class="movieTitle_test">@movie.Title (@movie.Year)</blockquote>
                                                        <p id="imdbId" style="display: none;">/search?id=@movie.ImdbID</p>
                                                    </button>
                                                </li>


                                       }

                                        </ul>
                                    </div>
                                </div>
                            </li>
                            <li><button id="menuSearchBtn"><i class="icon-search"></i></button></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        @RenderBody();

        <div id="gtco-subscribe">
            <div class="gtco-container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                        <h2>Search</h2>
                        <p>Search for movies</p>
                    </div>
                </div>
                <div class="row animate-box">
                    <div class="col-md-12">
                        <div class="col-md-4 col-sm-4" style="width:66.6666%;">
                            <div class="form-group">
                                <label id="nameHolder" for="name" class="sr-only">Name</label>
                                <input type="text" class="form-control" id="search" placeholder="Movie title...">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <button id="searchBtn" type="submit" class="btn btn-default btn-block">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer id="gtco-footer" role="contentinfo">
            <div class="gtco-container">
                <div class="row row-pb-md">
                    <div class="col-md-2 col-sm-4 col-xs-6">
                        <ul class="gtco-footer-links">
                            <li><a href="#">About</a></li>
                            <li><a href="#">Help</a></li>
                            <li><a href="#">Contact</a></li>
                            <li><a href="#">Terms</a></li>
                            <li><a href="#">Meetups</a></li>
                        </ul>
                    </div>
                </div>
                <div class="row copyright">
                    <div class="col-md-12">
                        <p class="pull-left">
                            <small class="block">&copy; 2020 Jonathan and Jesper. All Rights Reserved.</small>
                            <small class="block">Designed by Jonathan and Jesper</small>
                        </p>
                        <p class="pull-right">
                            <ul class="gtco-social-icons pull-right">
                                <li><a href="#"><i class="icon-twitter"></i></a></li>
                                <li><a href="#"><i class="icon-facebook"></i></a></li>
                                <li><a href="#"><i class="icon-linkedin"></i></a></li>
                                <li><a href="#"><i class="icon-dribbble"></i></a></li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    @RenderSection("scripts", required: false)
    <!-- jQuery -->
    <script src="js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="js/owl.carousel.min.js"></script>
    <!-- countTo -->
    <script src="js/jquery.countTo.js"></script>
    <!-- Magnific Popup -->
    <script src="js/jquery.magnific-popup.min.js"></script>

    <script src="js/magnific-popup-options.js"></script>
    
    <script src="js/main.js"></script>

    <script src="js/searchHandler.js"></script>

</body>
</html>

